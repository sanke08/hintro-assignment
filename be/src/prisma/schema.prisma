generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String  @id @unique @default(cuid())
  email    String  @unique
  name     String
  password String
  avatar   String?

  members           Member[]
  createdWorkspaces Workspace[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ROLE {
  ADMIN
  MEMBER
}

model Member {
  id String @id @unique @default(cuid())

  userId      String
  workspaceId String

  user      User      @relation(fields: [userId], references: [id])
  workspace Workspace @relation(fields: [workspaceId], references: [id])

  role ROLE @default(MEMBER)

  taskAssigned   Task[] @relation("TaskAssignee")
  taskAssignedBy Task[] @relation("TaskAssignedBy")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, workspaceId])
}

model Workspace {
  id         String  @id @unique @default(cuid())
  name       String
  inviteCode String  @unique // Added inviteCode
  trash      Boolean @default(false)

  creatorId String
  creator   User   @relation(fields: [creatorId], references: [id], onDelete: Cascade)

  members   Member[]
  boards    Board[]
  auditLogs AuditLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Board {
  id    String  @id @unique @default(cuid())
  title String
  trash Boolean @default(false)

  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  lists List[]
}

model List {
  id    String  @id @unique @default(cuid())
  title String
  trash Boolean @default(false)

  boardId String
  board   Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks Task[]
}

enum PRIORITY {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum STATUS {
  TO_DO
  IN_PROGRESS
  IN_REVIEW
  DONE
}

model Task {
  id          String    @id @unique @default(cuid())
  title       String
  description String?
  dueDate     DateTime?
  priority    PRIORITY  @default(LOW)
  status      STATUS    @default(TO_DO)
  trash       Boolean   @default(false)

  assigneeId String?
  assignee   Member? @relation("TaskAssignee", fields: [assigneeId], references: [id], onDelete: SetNull)

  assignedById String?
  assignedBy   Member? @relation("TaskAssignedBy", fields: [assignedById], references: [id], onDelete: SetNull)

  listId String
  list   List   @relation(fields: [listId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ENTITY_TYPE {
  BOARD
  LIST
  TASK
  MEMBER
}

enum ACTION {
  CREATE
  UPDATE
  DELETE
  JOINED
  REMOVE
  ROLE_CHANGED
  TRASHED
  RESTORED
}

model AuditLog {
  id          String    @id @default(uuid())
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  // Optional entity references
  boardId     String?
  listId      String?
  entityId    String
  entityType  ENTITY_TYPE
  entityTitle String

  // User info snapshot
  userId    String
  userName  String @db.Text
  userImage String @db.Text

  action  ACTION
  changes Json? // optional: store old/new values
  meta    Json? // optional: IP, device, etc.

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([workspaceId])
}
